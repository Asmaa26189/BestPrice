
<div class="mt-4">
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            No product pricing found!
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var productPrice in Model)
            {
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2 poster" style="background-image: url(data:image\/*;base64,@(Convert.ToBase64String(productPrice.Image)))"></div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <h5 class="card-title">@productPrice.Brand (@productPrice.Date)</h5>
                                        <h5 class="card-title">@productPrice.Brand (@productPrice.Place)</h5>
                                        <p class="card-text text-justify storyLineParagraph1">
                                            @(productPrice.Comments.Length > 500 ? $"{productPrice.Comments.Substring(0, 500)}" : productPrice.Comments)
                                            <a href="javascript:;" class="js-moreDetails" data-id=@(productPrice.Comments)>
                                                @(productPrice.StoryLine.Length > 500 ? $"Read more..." : $"")
                                            </a>
                                        </p>
                                        <p class="card-text text-justify storyLineParagraph2 d-none">
                                            @(productPrice.Comments)
                                            <a href="javascript:;" class="js-lessDetails">
                                                Show Less...
                                            </a>
                                        </p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-2">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <small class="text-muted">@productPrice.Price.ToString("0.0")</small>
                                        </p>
                                        @*  <div>
                                <a asp-action="Details" asp-route-id="@productPrice.Id" class="btn btn-outline-secondary">
                                <i class="bi bi-camera-reels"></i>
                                Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@productPrice.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                                Edit
                                </a>
                                <a href="javascript:;" class="btn btn-danger js-delete" data-id="@productPrice.Id">
                                <i class="bi bi-trash"></i>
                                Delete
                                </a>
                                </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>